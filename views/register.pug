extends layout

block content
  .container
    .row
      .col-6.mx-auto.mt-5
        h1.text-center.text-uppercase Register
        form(method="POST" novalidate).needs-validation.mt-3
          .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" required)
            .invalid-feedback Please provide a valid username.
          .form-group
            label(for="email") Email
            input#email.form-control(type="text" name="email" required)
            .invalid-feedback Please provide a valid email.
          .form-group
            label(for="password") Password
            input#password.form-control(type="password" name="password" required)
            .invalid-feedback Please provide a valid password.
          button.btn.btn-primary.btn-block(type="submit") Register
